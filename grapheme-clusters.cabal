name:                grapheme-clusters
version:             0.1.0.0
category:            Text
synopsis:            Constructions on regular expressions to recognize grapheme clusters
homepage:            https://github.com/cacay/grapheme-clusters

license:             MIT
license-file:        LICENSE

author:              Cosku Acay
maintainer:          coskuacay@gmail.com

build-type:          Simple
cabal-version:       >=1.10

extra-source-files:  README.md


library
  hs-source-dirs:        haskell-src

  default-language:      Haskell2010

  exposed-modules:       RegExp.RegExp
                         RegExp.Language
                         RegExp.Derivative
                         RegExp.Operations
                         Data.BooleanAlgebra
                         Data.KleeneAlgebra
                         Data.GSet
                         Data.Semiring

                         Segmentation
                         GraphemeClusterBreak

  other-modules:         SparseVector
                         SparseMatrix
                         DFA

  build-depends:         base >= 4.11,
                         flow,
                         mtl,
                         containers,
                         -- semiring-num,
                         singletons,
                         finite-typelits,
                         QuickCheck,
                         smallcheck

  default-extensions:    ScopedTypeVariables
                         OverloadedStrings
                         StandaloneDeriving
                         DeriveFunctor

  other-extensions:      GADTs
                         DataKinds
                         KindSignatures
                         TypeFamilies
                         FlexibleInstances
                         FlexibleContexts
                         UndecidableInstances
                         OverloadedLists

  ghc-options:           -fwarn-incomplete-patterns
                         -fwarn-unused-imports


test-suite spec
  type: exitcode-stdio-1.0

  hs-source-dirs:        test

  default-language:      Haskell2010

  main-is:               Spec.hs

  other-modules:         Data.GSetSpec
                         RegExp.RegExpSpec
                         Helpers

  build-depends:         base >= 4.11,
                         grapheme-clusters,
                         hspec,
                         hspec-smallcheck,
                         QuickCheck,
                         smallcheck

  default-extensions:    ScopedTypeVariables
                         OverloadedStrings
                         OverloadedLists
                         StandaloneDeriving
                         DeriveFunctor

  ghc-options:           -Wall